@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenidos a Arquitectura de Software</h1>
    <p>@Model.Mensaje</p>
</div>

<div>
    <form method="post">
        <input type="text" asp-for="Nombre"/>
        <button type="submit" class="btn-primary">Enviar Datos</button>
    </form>
    @if (Model.Saludo!=null)
    {
        <p>@Model.Saludo</p>
    }
</div>

